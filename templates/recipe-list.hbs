<div class="search-container">
  <input type="text" class="searchbar" placeholder="Search recipes.." />
  <button type="button" class="button-search">Search</button>
  <button type="button" class="button-prev-list button-nav">Back</button>
  <button type="button" class="button-next-list button-nav">Next</button>
</div>
<div class="recipe-container">
  {{#each recipes}}
    <div class="recipe-list-element border" data-id="{{id}}">
      <div class="recipe-image">
        <img src="{{image_url}}" alt="{{caption}}" />
      </div>
      <div class="caption-description">
        <div class="caption"><b>{{caption}}</b></div>
        <div class="description">{{description}}</div>
      </div>
    </div>
  {{/each}}
</div>