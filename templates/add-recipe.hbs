<div class="add-recipe flex-column">
  <div class="accent-text">Add a new recipe</div>
  <div class="text-info">Write a name and a description for your recipe, also
    you may attach a picture</div>
  <input type="text" class="recipe-name" placeholder="Name... (string)" />
  <input
    type="text"
    class="recipe-description"
    placeholder="Description... (string)"
  />
  <input
    type="text"
    class="recipe-image-url"
    placeholder="Image url... (url)"
  />
  <div class="text-info">Write info for each step</div>
  <div class="recipe-step-storage"></div>
  <button type="button" class="button-add-step">add step</button>
  <div class="add-info"></div>
  <button type="button" class="button-add-recipe">add this recipe</button>
</div>